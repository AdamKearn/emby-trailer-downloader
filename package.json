{
  "name": "emby-trailer-downloader",
  "version": "2.0.0",
  "type": "module",
  "main": "src/index.ts",
  "license": "MIT",
  "dependencies": {
    "@t3-oss/env-core": "^0.3.1",
    "dotenv": "^16.0.3",
    "progress-estimator": "^0.3.1",
    "youtube-dl-exec": "^2.4.1",
    "zod": "^3.22.3"
  },
  "scripts": {
    "dev": "ts-node --esm src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint . --ext .ts",
    "update-yt-dlp": "curl -L https://github.com/yt-dlp/yt-dlp-nightly-builds/releases/latest/download/yt-dlp_linux_aarch64 -o ./node_modules/youtube-dl-exec/bin/yt-dlp && chmod +x ./node_modules/youtube-dl-exec/bin/yt-dlp",
    "update-and-start": "yarn run update-yt-dlp && yarn run build && yarn run start"
  },
  "devDependencies": {
    "@tsconfig/esm": "^1.0.3",
    "@tsconfig/node20": "^1.0.0",
    "@tsconfig/strictest": "^2.0.1",
    "@types/eslint": "^8.37.0",
    "@types/node": "^20.1.3",
    "@types/prettier": "^2.7.2",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "eslint": "^8.40.0",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "tsc": "^2.0.4",
    "typescript": "^5.0.4"
  }
}
